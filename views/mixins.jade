mixin article(article)
	article.panel.panel-primary
		header.panel-heading
			h1 #{article.title}
			p
				span.glyphicon.glyphicon-tags
				strong  Tags:
				each tag in article.tags
					|  
					a.white-link(href='/tag?tag=#{tag}') #{tag}
				span.pull-right
					span.glyphicon.glyphicon-inbox
					strong  Category:
					|  
					a.white-link(href='/category?category=#{article.category}') #{article.category}
		
		.panel-body
			p #{article.text}

		footer.panel-footer
			span.glyphicon.glyphicon-user
			|  #{article.author}
			span.pull-right
				span.glyphicon.glyphicon-calendar
				|  #{article.date}

mixin tags(tags)
	h3
		span.glyphicon.glyphicon-tags
		|  Tags

	ul.list-unstyled
		each tag in tags
			li.list-element
				a(href='/tag?tag=#{tag}') #{tag}

mixin categories(categories)
	h3
		span.glyphicon.glyphicon-inbox
		|  Categories

	ul.list-unstyled
		each category in categories
			li.list-element
				a(href='/category?category=#{category}') #{category}

mixin archives(archives)
	h3
		span.glyphicon.glyphicon-calendar
		|  Archives

	ul.list-unstyled
		each archive in archives
